<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Mapping_Tools.Desktop"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:helpers="clr-namespace:Mapping_Tools.Desktop.Helpers"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             x:Class="Mapping_Tools.Desktop.App">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Lime" />

        <material:MaterialIconStyles />
        <dialogHostAvalonia:DialogHostStyles />

        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style Selector="TextElement">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style Selector="Menu">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style Selector="controls|ColorZone[Mode=PrimaryMid] helpers|ShadowMenuItem">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="controls|ColorZone[Mode=PrimaryMid] material|MaterialIcon">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="ContextMenu">
            <Setter Property="WindowManagerAddShadowHint" Value="True" />
        </Style>
    </Application.Styles>

    <Application.Resources>
        <helpers:MapPathStringToCountStringConverter x:Key="MapPathStringToCountStringConverter" />
        <helpers:MapPathStringAddNewLinesConverter  x:Key="MapPathStringAddNewLinesConverter" />
        <helpers:MapPathStringJustFilenameConverter x:Key="MapPathStringJustFilenameConverter" />
    </Application.Resources>
</Application>